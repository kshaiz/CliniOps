{
  "name": "CliniOps",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "css:scss": "node-sass --output-style compressed -o dist/css src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/css/*.css",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/html\" -- npm run build:html",
    "copy:img": "rimraf dist/img && copyfiles --u 1 src/img/**/*.* dist",
    "watch:img": "onchange \"src/img\" -- npm run copy:img",
    "build:img": "npm run copy:img",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*"
  },
  "license": "Apache License 2.0",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "browser-sync": "^2.27.9",
    "copyfiles": "^2.4.1",
    "eslint": "^8.12.0",
    "eslint-webpack-plugin": "^3.1.1",
    "htmlnano": "^2.0.2",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "postcss-scss": "^4.0.3",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.8.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.6.1",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}
